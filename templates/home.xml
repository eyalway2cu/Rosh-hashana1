<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<div id="content">
				<div class="inner_wrap">
					<div class="top_container">
						<h1>
							<cms:text constant="title"/>
						</h1>
						<h3>
							<cms:text constant="sub_title"/>
						</h3>
						<p>
							<cms:text constant="paragraph"/>
						</p>
					</div>
					<div class="donate">
						<span>
							<cms:text constant="together"/>
						</span>
						<span>
							<cms:text constant="donate_now"/>
						</span>
						<a
							 href="'" 
							 class="donate_now"
						>
						<cms:text constant="donate_button"/>
						</a>
					</div>
					<div class="bracha">
						<span>
							<cms:text constant="bracha_title"/>
						</span>
						<span>
							<cms:text constant="bracha_1"/>
						</span>
						<span>
							<cms:text constant="bracha_2"/>
						</span>
						<span>
							<cms:text constant="bracha_3"/>
						</span>
					</div>
				</div>
			</div>
		</body>
	</html>
</document>
